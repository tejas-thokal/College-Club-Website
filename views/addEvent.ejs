<% layout('/layouts/boilerplate') -%>

    <body>
        <div class="body">
        <form method="post" action="/college_club/addEvent">
           
                <h1>Add Event</h1>

                <div class="mb-3">
                    <label for="Event_Name" class="form-label">Event Name</label>
                    <input type="text" id="Event_Name" name="Event_Name" placeholder="Enter Name of Event"
                        class="form-control" required>
                    <div class="valid-feedback">Looks good</div>
                    <div class="invalid-feedback">Please Provide Valid Title</div>
                </div>

                <div class="mb-3">
                    <label for="Event_Description" class="form-label">Description</label>
                    <textarea type="text" id="Event_Description" name="Event_Description"
                        placeholder="Enter Description of Event" class="form-control" required></textarea>
                    <div class="valid-feedback">Looks good</div>
                    <div class="invalid-feedback">Please Provide Valid Description</div>
                </div>

                <div class="mb-3">
                    <label for="Event_Image" class="form-label">Image</label>
                    <input type="text" id="Event_Image" name="Event_Image" placeholder="Give URL of Image"
                        class="form-control">
                    <div class="valid-feedback">Looks good</div>
                </div>

                <div class="mb-3">
                    <label for="Event_Date" class="form-label">Event Details</label>
                    <input type="date" id="Event_Date" name="Event_Date" placeholder="Enter Date of Event"
                        class="form-control">
                        <input type="time" id="Event_Time" name="Event_Time" placeholder="Enter Time of Event"
                        class="form-control">
                        <input type="text" id="Event_Location" name="Event_Location" placeholder="Enter Location of Event"
                        class="form-control">
                    <div class="valid-feedback">Looks good</div>
                </div>

                <div class="mb-3">
                    <label for="Event_Highlight" class="form-label">Event Highlight</label>
                    <input type="text" id="Event_Highlight" name="Event_Highlight" placeholder="Enter Event Highlight"
                        class="form-control">
                    <div class="valid-feedback">Looks good</div>
                </div>

                <div class="mb-3">
                    <label for="Event_Link" class="form-label">Registration Link</label>
                    <input type="text" id="Event_Link" name="Event_Link" placeholder="Enter Registration Link"
                        class="form-control">
                    <div class="valid-feedback">Looks good</div>
                </div>

                <div class="mb-3">
                    <label for="Event_Type" class="form-label">Event Type</label>
                    <select name="Event_Type" class="form-control" required>
                        <option value="">Select Type</option>
                        <option value="Online">Online</option>
                        <option value="Offline">Offline</option>
                    </select>
                </div>

                <div class="mb-3 button">
                    <button type="submit" class="add-btn btn">Add</button>
                </div>
            
        </form>
    </div>
    </body>