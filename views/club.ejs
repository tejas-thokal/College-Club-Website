<% layout('/layouts/boilerplate') -%>

    <body>
        <div class="main">
            <div class="basicinfo">
                <div class="logo row row-cols-1 row-cols-md-2 g-4"><img src="<%= club.clubLogo %>" alt="Club Logo"></div>
                <div class="info">
                    <h1>
                        <%= club.name %>
                    </h1>
                </div>
            </div>
            <section class="sociallinks">
                <h3>Follow Us:</h3>
                <a href="<%= club.social_links.instagram %>" target="_blank"><i
                        class="fa-brands fa-square-instagram"></i></a> |
                <a href="<%= club.social_links.linkedin %>" target="_blank"><i class="fa-brands fa-linkedin"></i></a>
            </section>
        </div>
        <div class="desc">
            <h1>Club Information</h1>
            <p>
                <%= club.description %>
            </p>
        </div>
        <div class="vision">
            <h1>Club Vision</h1>
            <ul>
                <% club.vision.forEach(vision=> { %>
                    <li>
                        <%= vision %>
                    </li>
                    <% }); %>
            </ul>
        </div>

        <div class="mission">
            <h1>Club Mission</h1>
            <ul>
                <% club.mission.forEach(mission=> { %>
                    <li>
                        <%= mission %>
                    </li>
                    <% }); %>
            </ul>
        </div>
            <div class="domain" style="padding-top: 2em;">
                <h1>Our Domains</h1>
                <div class="domains  row row-cols-2 row-cols-md-3 g-4">
                    <% club.domains.forEach(domain=>{ %>
                        <img src="https://img.freepik.com/free-photo/portrait-young-indian-top-manager-t-shirt-tie-crossed-arms-smiling-white-isolated-wall_496169-1513.jpg?t=st=1743406760~exp=1743410360~hmac=7f9260f9e687122609de920b733cb2dddedefcbe936cf3ea66b8e2e5e35342f3&w=996 %>"
                            alt="..." style="border-radius: 50%; height: 10em; width: 14em;">
                        <% }) %>
                </div>
            </div>


            <div class="core-team ">
                <h1>
                    Our Core Team
                </h1>
                <section class="team-section">
                    <% club.coreTeam.forEach(member=> { %>
                        <div class="profile-card" >
                            <img src="https://res.cloudinary.com/dmokljnng/image/upload/c_crop,w_700,h_1022/v1726578664/WhatsApp_Image_2024-09-17_at_09.23.44_c72cfeee_asdy0v.jpg"
                                alt="">
                            <div class="info-overlay">
                                <div class="member-name">
                                    <%= member.name %>
                                </div>
                                <div class="member-role">
                                    <%= member.role %>
                                </div>
                                <div class="icon">
                                    <i class="fa-brands fa-square-instagram"></i>
                                    <i class="fa-brands fa-linkedin"></i>
                                    <i class="fa-solid fa-envelope"></i>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </section>
            </div>
    </body>